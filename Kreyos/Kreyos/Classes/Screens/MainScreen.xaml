<phone:PhoneApplicationPage
    x:Class="Kreyos.Classes.Screens.HomeScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Components="clr-namespace:Kreyos.Classes.Components"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    mc:Ignorable="d"
    shell:SystemTray.IsVisible="True">

    <!-- Resources -->
    <phone:PhoneApplicationPage.Resources>
        <!-- Header Template -->
        <DataTemplate x:Key="ActivityStatsHeader">
            <Border Background="Transparent" 
                    Padding="0">
                <Grid x:Name="activity_title">
                    <Rectangle x:Name="rect_green" Fill="#FFAAE233" HorizontalAlignment="Right" Height="130" Margin="0,0,341,0" Stroke="#00000000" VerticalAlignment="Top" Width="140"/>
                    <Rectangle x:Name="rect_blue" Fill="#FF71BAE8" HorizontalAlignment="Right" Height="130" Stroke="#00000000" VerticalAlignment="Top" Width="343"/>
                    <TextBlock x:Name="txt_day" 
                               Text="{Binding TxtDay}" HorizontalAlignment="Left" Height="50" Margin="1,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" Foreground="Black" TextAlignment="Center" FontSize="40"/>
                    <TextBlock x:Name="txt_date" 
                               Text="{Binding Date}" HorizontalAlignment="Left" Height="40" Margin="1,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" Foreground="White" TextAlignment="Center" FontSize="29.333"/>
                    <TextBlock x:Name="txt_static_steps1" HorizontalAlignment="Left" Height="40" Margin="156,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60" Foreground="White" FontSize="24" Text="steps"/>
                    <TextBlock x:Name="txt_static_distance1" HorizontalAlignment="Left" Height="40" Margin="254,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Foreground="White" FontSize="24" Text="distance "/>
                    <TextBlock x:Name="txt_static_calories" HorizontalAlignment="Left" Height="40" Margin="379,28,-18,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Foreground="White" FontSize="24" Text="calories"/>
                    <TextBlock x:Name="txt_steps1" 
                               Text="{Binding TxtSteps}" HorizontalAlignment="Left" Height="53" Margin="138,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="93" Foreground="#FF196FB4" FontSize="40" TextAlignment="Center"/>
                    <TextBlock x:Name="txt_distance1" 
                               Text="{Binding TxtDistance}" HorizontalAlignment="Left" Height="53" Margin="231,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" Foreground="#FF196FB4" FontSize="40" TextAlignment="Center"/>
                    <TextBlock x:Name="txt_calories" 
                               Text="{Binding TxtCalories}" HorizontalAlignment="Left" Height="53" Margin="361,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="93" Foreground="#FF196FB4" FontSize="40" TextAlignment="Center"/>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Cell Template -->
        <DataTemplate x:Key="ActivityStatsCell">
            <StackPanel VerticalAlignment="Top">
                <Grid x:Name="activity_cell">
                    <Rectangle x:Name="rect_border" Fill="#19FFFFFF" HorizontalAlignment="Left" Height="125" Stroke="#00000000" VerticalAlignment="Top" Width="480"/>
                    <TextBlock x:Name="txt_activity_time" HorizontalAlignment="Left" Height="35" Margin="16,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="59" Foreground="Black"
                               Text="{Binding TxtTime}"/>
                    <Image x:Name="img_activity_type" Margin="80,40,337,24" Stretch="Fill"
                           Source="{Binding TxtActImage}"/>
                    <TextBlock x:Name="txt_activity_type" HorizontalAlignment="Left" Height="35" Margin="159,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="94" Foreground="#FFDD9D22" FontSize="18.667"
                               Text="{Binding TxtActTitle}"/>
                    <!-- Sub Slider -->
                    <ListBox x:Name="ActivitySubSlider" 
                             ItemsSource="{Binding Stats}"
                             Grid.Row="1" 
                             ScrollViewer.HorizontalScrollBarVisibility="Auto"
                             ScrollViewer.VerticalScrollBarVisibility="Disabled" 
                             Width="332"
                             Height="71" 
					         Margin="148,54,0,0" 
					         VerticalAlignment="Top">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid x:Name="scrollview_cell" Grid.Row="1">
                                    <Rectangle x:Name="rect" Fill="#00F4F4F5" HorizontalAlignment="Left" Height="66" Stroke="#00000000" VerticalAlignment="Top" Width="104"/>
                                    <TextBlock x:Name="txt_title" HorizontalAlignment="Left" Height="26" Margin="8,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="61" Foreground="#FF54A8EA" FontSize="17.333"
                                    Text="{Binding TxtTitle}"/>
                                    <TextBlock x:Name="txt_value" HorizontalAlignment="Left" Height="43" Margin="10,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="94" Foreground="#FF2D2D2D" FontSize="33.333"
                                    Text="{Binding TxtValue}"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </StackPanel>
        </DataTemplate>

        <!-- Sports Grid Cell Template 1x2, 3x1, 2x2 -->
        <ControlTemplate x:Key="SportsTemplate2x1">
            <Grid Width="480" Height="192" >
                <Rectangle 
                    x:Name="rect_border" 
                    Fill="#00000000" 
                    HorizontalAlignment="Left" 
                    Width="480"
                    Height="192" 
                    Stroke="White" 
                    VerticalAlignment="Top" 
                    />
                <Image 
                    x:Name="img_tash" 
                    Source="/Assets/Icons/sports-mode-remove-disabled-icon.png" 
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Width="59"
                    Height="60" 
                    Margin="20,34,0,0"
                    Tag="{Binding Cursor}"
                    />
                <Image 
                    x:Name="img_refresh"
                    Source="/Assets/Icons/sports-mode-refresh-disabled-icon.png" 
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Width="59"
                    Height="60" 
                    Margin="20,103,0,0"
                    Tag="{Binding Cursor}"
                    />
                <TextBlock 
                    x:Name="txt_unit" 
                    HorizontalAlignment="Left" 
                    Height="35" 
                    Margin="89.5,133.098,0,0" 
                    TextWrapping="Wrap" 
                    VerticalAlignment="Top" 
                    Width="360" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Foreground="White"
                    Text="{Binding Unit}">
                    <TextBlock.RenderTransform>
                        <CompositeTransform SkewY="0.335" TranslateY="0.327"/>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <TextBlock x:Name="txt_title" HorizontalAlignment="Left" Height="35" Margin="93.5,37.607,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="360.667" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Foreground="White"
                           Text="{Binding Title}">
                    <TextBlock.RenderTransform>
                        <CompositeTransform SkewY="0.335" TranslateY="0.327"/>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <TextBlock x:Name="txt_value" HorizontalAlignment="Left" Height="81.737" Margin="95.166,55.256,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="364" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Foreground="White" FontWeight="Bold" FontSize="66.667"
                           Text="{Binding Value}">
                    <TextBlock.RenderTransform>
                        <CompositeTransform SkewY="0.335" TranslateY="0.327"/>
                    </TextBlock.RenderTransform>
                </TextBlock>
            </Grid>
        </ControlTemplate>
        <ControlTemplate x:Key="SportsTemplate3x1">
            <Grid>
                <Rectangle x:Name="rect_border" Fill="#00000000" HorizontalAlignment="Left" Height="128" Stroke="White" VerticalAlignment="Top" Width="480"/>
                <Image 
                    x:Name="img_tash" 
                    Margin="25,13,407,67" 
                    Source="/Assets/Icons/sports-mode-remove-icon.png" 
                    Stretch="Fill" 
                    Tap="onDelete"
                    Tag="{Binding Cursor}"
                    />
                <Image 
                    x:Name="img_refresh" 
                    Margin="25,69,407,11" 
                    Source="/Assets/Icons/sports-mode-refresh-icon.png" 
                    Stretch="Fill" 
                    Tap="onRefresh"
                    Tag="{Binding Cursor}"
                    />
                <TextBlock x:Name="txt_unit" HorizontalAlignment="Left" Height="35" Margin="89.5,93.667,0,-0.667" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Foreground="White"
                           Text="{Binding Unit}">
                    <TextBlock.RenderTransform>
                        <CompositeTransform SkewY="0.335" TranslateY="0.327"/>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <TextBlock x:Name="txt_title" HorizontalAlignment="Left" Height="35" Margin="93.5,9.51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Foreground="White"
                           Text="{Binding Title}">
                    <TextBlock.RenderTransform>
                        <CompositeTransform SkewY="0.335" TranslateY="0.327"/>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <TextBlock x:Name="txt_value" HorizontalAlignment="Left" Height="81.737" Margin="95.166,19.912,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Foreground="White" FontWeight="Bold" FontSize="66.667"
                           Text="{Binding Value}">
                    <TextBlock.RenderTransform>
                        <CompositeTransform SkewY="0.335" TranslateY="0.327"/>
                    </TextBlock.RenderTransform>
                </TextBlock>
            </Grid>
        </ControlTemplate>
        <ControlTemplate x:Key="SportsTemplate2x2">
            <Grid>
                <Rectangle x:Name="rect_border" Fill="#00000000" HorizontalAlignment="Left" Height="192" Stroke="White" VerticalAlignment="Top" Width="239"/>
                <TextBlock x:Name="txt_title" HorizontalAlignment="Left" Height="35" Margin="95,32.965,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Foreground="White"
                           Text="{Binding Title}">
                    <TextBlock.RenderTransform>
                        <CompositeTransform SkewY="0.335" TranslateY="0.327"/>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <TextBlock x:Name="txt_value" HorizontalAlignment="Left" Height="81.737" Margin="95.666,49.034,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Foreground="White" FontWeight="Bold" FontSize="66.667"
                           Text="{Binding Value}">
                    <TextBlock.RenderTransform>
                        <CompositeTransform SkewY="0.335" TranslateY="0.327"/>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <TextBlock x:Name="txt_unit" HorizontalAlignment="Left" Height="35" Margin="95,129.622,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Foreground="White"
                           Text="{Binding Unit}">
                    <TextBlock.RenderTransform>
                        <CompositeTransform SkewY="0.335" TranslateY="0.327"/>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <Image 
                    x:Name="img_trash" 
                    Margin="24,34,167,110" 
                    Source="/Assets/Icons/sports-mode-remove-icon.png" 
                    Stretch="Fill" 
                    Tap="onDelete"
                    Tag="{Binding Cursor}"
                    />
                <Image 
                    x:Name="txt_refresh" 
                    Margin="24,103,167,41" 
                    Source="/Assets/Icons/sports-mode-refresh-icon.png" 
                    Stretch="Fill" 
                    Tap="onRefresh"
                    Tag="{Binding Cursor}"
                    />
            </Grid>
        </ControlTemplate>

        <!-- LongListSelector Style. Remove extra space at right -->
        <Style x:Key="LLSRemoveWhiteSpace" TargetType="phone:LongListSelector">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{StaticResource PhoneForegroundBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="phone:LongListSelector">
                        <Grid Background="{TemplateBinding Background}" d:DesignWidth="480" d:DesignHeight="800">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="ScrollStates">
                                    <VisualStateGroup.Transitions>
                                        <VisualTransition GeneratedDuration="00:00:00.5" />
                                    </VisualStateGroup.Transitions>
                                    <VisualState x:Name="Scrolling">
                                        <Storyboard>
                                            <DoubleAnimation Duration="0"
                                                 To="1"
                                                 Storyboard.TargetProperty="Opacity"
                                                 Storyboard.TargetName="VerticalScrollBar" />
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="NotScrolling" />
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Grid Margin="{TemplateBinding Padding}">
                                <ViewportControl x:Name="ViewportControl"
                                     HorizontalContentAlignment="Stretch"
                                     VerticalAlignment="Top" />

                                <ScrollBar x:Name="VerticalScrollBar"
                                           Margin="0,0,-12,0"
                                           Opacity="0"
                                           HorizontalAlignment="Right"
                                           Orientation="Vertical" />
                            </Grid>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </phone:PhoneApplicationPage.Resources>
    
    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
    	<Grid x:Name="ref_screen" Grid.RowSpan="2" d:IsHidden="True">
    		<Image x:Name="img_home_ref" Source="/Assets/MockUps/Windows Phone 8/home.png" Stretch="Fill" d:IsHidden="True"/>
    		<Image Margin="0,0,0,1" Source="/Assets/MockUps/Windows Phone 8/activity-stats.png" Stretch="Fill" d:IsHidden="True"/>
    		<Image Margin="0,0,0,1" Source="/Assets/MockUps/Windows Phone 8/sports-mode-4grid.png" Stretch="Fill" d:IsHidden="True"/>
    		<Image Source="/Assets/MockUps/Windows Phone 8/daily-target.png" Stretch="Fill" d:IsHidden="True"/>
    		<Image Source="/Assets/MockUps/Windows Phone 8/profile.png" Stretch="Fill" Margin="0,0,0,1" d:IsHidden="True"/>
    		<Image Source="/Assets/MockUps/Windows Phone 8/settings.png" Stretch="Fill" d:IsHidden="True"/>
    		<Rectangle Fill="#CC000000" HorizontalAlignment="Left" Height="768" Stroke="Black" VerticalAlignment="Top" Width="480" d:IsHidden="True"/>
    		<Image Source="/Assets/MockUps/Windows Phone 8/sports-mode-default-view.png" Stretch="Fill"/>

    	</Grid>
    	<Grid x:Name="white_background" Margin="0,0,-10,0">
    		<Rectangle Fill="#FFF9F9F9" HorizontalAlignment="Left" Height="769" Stroke="#00000000" VerticalAlignment="Top" Width="490"/>
    		<Image Source="/Assets/Masks/kreyos-inner-bg.png" Stretch="Fill" Margin="0,0,10,0"/>
    	</Grid>
    	<Grid x:Name="top_bar" Margin="0,0,0,583">
    		<Rectangle Fill="#FF379CE6" HorizontalAlignment="Left" Height="185" Stroke="#00000000" VerticalAlignment="Top" Width="480"/>
    		<Image x:Name="img_kreyos_logo" Margin="15,12,287,125" Source="/Assets/Screens/LoginScreen/logo_kreyos_white.png" Stretch="Fill"/>

    	</Grid>
    	<phone:Pivot x:Name="MainPivot" HorizontalAlignment="Left" Height="703" Margin="0,65,0,0" Title="" VerticalAlignment="Top" Width="480" SelectionChanged="OnPivotChangedPage">
    		<phone:PivotItem x:Name="your_progress" CacheMode="{x:Null}" Header="your progress " Width="53" FontSize="16" d:IsLocked="True" d:IsHidden="True">
    			<Grid Margin="-192,0,192,0">
    				<phone:LongListSelector x:Name="TodaysActivityScroller" 
                                            HorizontalAlignment="Left" 
                                            Height="450" 
                                            Margin="-26,122,-405,-3" 
                                            VerticalAlignment="Top" 
                                            Width="485"
                                            IsGroupingEnabled="true"
                                            HideEmptyGroups="true"
                                            ItemTemplate="{StaticResource ActivityStatsCell}"
                                            GroupHeaderTemplate="{StaticResource ActivityStatsHeader}" RenderTransformOrigin="0.5,0"
                                            LayoutMode="List"
                                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                                            Style="{StaticResource LLSRemoveWhiteSpace}"
                                            />
    				<Grid x:Name="green_board" Margin="-9,-15,-418,450">
    					<Rectangle x:Name="rect_green_board" Fill="#FFAAE233" HorizontalAlignment="Left" Height="138" Stroke="#00000000" VerticalAlignment="Top" Width="480" Margin="-13,0,0,-4"/>
    					<Image x:Name="img_running_man" Source="/Assets/Masks/running-man-bg.png" Stretch="Fill" Margin="-13,0,13,-3"/>
    					<TextBlock x:Name="txt_static_active_now" HorizontalAlignment="Left" Height="27" Margin="58,10,0,0" TextWrapping="Wrap" Text="Active now" VerticalAlignment="Top" Width="120" FontSize="22.667"/>
    					<TextBlock x:Name="txt_hrs" HorizontalAlignment="Left" Height="95" Margin="0,32,0,0" TextWrapping="Wrap" Text="19" VerticalAlignment="Top" Width="86" FontSize="60" TextAlignment="Right" Foreground="Black"/>
    					<TextBlock x:Name="txt_min" HorizontalAlignment="Left" Height="95" Margin="159,32,0,0" TextWrapping="Wrap" Text="18" VerticalAlignment="Top" Width="86" FontSize="60" TextAlignment="Right" Foreground="Black"/>
    					<TextBlock x:Name="txt_sec" HorizontalAlignment="Left" Height="95" Margin="328,32,0,0" TextWrapping="Wrap" Text="30" VerticalAlignment="Top" Width="86" FontSize="60" TextAlignment="Right" Foreground="Black"/>
    					<TextBlock HorizontalAlignment="Left" Height="26" Margin="88,51,0,0" TextWrapping="Wrap" Text="hrs" VerticalAlignment="Top" Width="49" FontSize="17.333" Foreground="Black"/>
    					<TextBlock HorizontalAlignment="Left" Height="26" Margin="249,51,0,0" TextWrapping="Wrap" Text="min" VerticalAlignment="Top" Width="49" FontSize="17.333" Foreground="Black"/>
    					<TextBlock HorizontalAlignment="Left" Height="26" Margin="419,51,0,0" TextWrapping="Wrap" Text="sec" VerticalAlignment="Top" Width="49" FontSize="17.333" Foreground="Black"/>
    					<Image Margin="17,16,442,96" Source="/Assets/Icons/home-time-icon.png" Stretch="Fill"/>
    				</Grid>
                    <!-- Today's Activity Scroller -->
    			</Grid>
    		</phone:PivotItem>
    		<phone:PivotItem x:Name="activity_stats" CacheMode="{x:Null}" Header="activity stats " d:IsLocked="True" d:IsHidden="True">
    			<Grid>
    				<phone:LongListSelector x:Name="ActivityStatsScroller" 
    					HorizontalAlignment="Left" 
    					Height="587" 
    					Margin="-12,-15,-12,-3" 
    					VerticalAlignment="Top" 
    					Width="480"
    					IsGroupingEnabled="true"
    					HideEmptyGroups="true"
    					ItemTemplate="{StaticResource ActivityStatsCell}"
    					GroupHeaderTemplate="{StaticResource ActivityStatsHeader}" RenderTransformOrigin="0.5,0"
    					LayoutMode="List"
    					ScrollViewer.VerticalScrollBarVisibility="Auto"
    					Style="{StaticResource LLSRemoveWhiteSpace}"/>
    			</Grid>
    		</phone:PivotItem>
    		<phone:PivotItem x:Name="sports_mode" CacheMode="{x:Null}" Header="sports mode">
    			<Grid>
    				<Grid x:Name="mode_display" Margin="-13,-2,-11,397">
    					<TextBlock x:Name="txt_sportsRunning" HorizontalAlignment="Left" Height="78" Margin="28,0,0,0" TextWrapping="Wrap" Text="running" VerticalAlignment="Top" Width="210" FontSize="53.333" TextAlignment="Right" Foreground="#FF262626"/>
    					<TextBlock x:Name="txt_sportsCycling" HorizontalAlignment="Left" Height="78" Margin="262,0,0,0" TextWrapping="Wrap" Text="cycling" VerticalAlignment="Top" Width="210" FontSize="53.333" Foreground="#FF999999"/>
    					<TextBlock x:Name="txt_sportsTimer" HorizontalAlignment="Left" Height="100" Margin="0,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="480" TextAlignment="Center" FontSize="80" Foreground="Black">
    						<Run Text="00:00:00"/>
    						<LineBreak/>
    						<Run/>
    					</TextBlock>
    				</Grid>
    				<Rectangle x:Name="rect_grid" Fill="#FFE6E6E6" HorizontalAlignment="Left" Height="386" Margin="-13,184,-11,-1" Stroke="#00000000" VerticalAlignment="Top" Width="480"/>
                    <!-- Sports Mode 1x2 -->
                    <phone:LongListSelector 
                        x:Name="SportsGrid1x2" 
                        HorizontalAlignment="Left" 
                        Width="480"
                        Height="380" 
                        Margin="-13,184,-11,-1"
                        VerticalAlignment="Top" 
                        LayoutMode="Grid"
                        GridCellSize="480,380"
                        Style="{StaticResource LLSRemoveWhiteSpace}">

                        <phone:LongListSelector.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <ContentControl Template="{StaticResource SportsTemplate2x1}"/>
                                </StackPanel>
                            </DataTemplate>
                        </phone:LongListSelector.ItemTemplate>
                    </phone:LongListSelector>

                    <!-- Sports Mode 3x1 -->
                    <phone:LongListSelector 
                        x:Name="SportsGrid3x1" 
                        HorizontalAlignment="Left" 
                        Width="480"
                        Height="380" 
                        Margin="-13,184,-11,-1"
                        VerticalAlignment="Top" 
                        LayoutMode="Grid"
                        GridCellSize="480,380"
                        Style="{StaticResource LLSRemoveWhiteSpace}">

                        <phone:LongListSelector.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <ContentControl Template="{StaticResource SportsTemplate3x1}"/>
                                </StackPanel>
                            </DataTemplate>
                        </phone:LongListSelector.ItemTemplate>
                    </phone:LongListSelector>

                    <!-- Sports Mode 2x2 -->
                    <phone:LongListSelector 
                        x:Name="SportsGrid2x2" 
                        HorizontalAlignment="Left" 
                        Width="480"
                        Height="380" 
                        Margin="-13,184,-11,-1"
                        VerticalAlignment="Top" 
                        LayoutMode="Grid"
                        GridCellSize="480,380"
                        Style="{StaticResource LLSRemoveWhiteSpace}">

                        <phone:LongListSelector.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <ContentControl Template="{StaticResource SportsTemplate2x2}"/>
                                </StackPanel>
                            </DataTemplate>
                        </phone:LongListSelector.ItemTemplate>
                    </phone:LongListSelector>

                    <Image x:Name="img_add" Margin="397,511,8,11" Source="/Assets/Icons/sports-mode-plus-icon.png" Stretch="Fill" Tap="OnAdd"/>
                </Grid>
    		</phone:PivotItem>
    		<phone:PivotItem x:Name="daily_target" CacheMode="{x:Null}" Header="daily target " d:IsHidden="True" d:IsLocked="True">
    			<Grid>
    				<Grid x:Name="daily_target1" Margin="-12,6,-2,63" Tap="OnUpdateWatch">
    					<Image x:Name="img_target_logo" Margin="131,14,124,243" Source="/Assets/Icons/daily-target-badge.png" Stretch="Fill"/>
