                                HorizontalAlignment="Left" 
                                Margin="10,311,0,0" 
                                VerticalAlignment="Top" 
                                Width="460" 
                                Background="#FF1875B4"
                                Minimum="4000"
                                Maximum="12000"
                                SmallChange="1000"
                                LargeChange="2000" ManipulationCompleted="OnSliderCompleted"
                                />
    					<Rectangle Fill="#FFFFFFED" HorizontalAlignment="Left" Height="12" Margin="135,333,0,0" Stroke="White" VerticalAlignment="Top" Width="2"/>
    					<Rectangle Fill="#FFFFFFED" HorizontalAlignment="Left" Height="12" Margin="240,333,0,0" Stroke="White" VerticalAlignment="Top" Width="2"/>
    					<Rectangle Fill="#FFFFFFED" HorizontalAlignment="Left" Height="12" Margin="344,333,0,0" Stroke="White" VerticalAlignment="Top" Width="2"/>
    					<TextBlock x:Name="txt_static_set_daily_target" HorizontalAlignment="Left" Height="48" Margin="25,276,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280" FontSize="26.667" Foreground="#FF1C8EDA">
    						<Run Text="Set your daily target"/>
    						<LineBreak/>
    						<Run/>
